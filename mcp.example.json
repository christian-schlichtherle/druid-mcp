{
  "mcpServers": {
    "druid": {
      "command": "uv",
      "args": [
        "--directory",
        "/ABSOLUTE/PATH/TO/druid-mcp",
        "run",
        "mcp",
        "run",
        "main.py"
      ],
      "env": {
        "DRUID_CLUSTER_URLS": "dev=http://localhost:8089 stage=http://localhost:8090 prod=http://localhost:8091"
      }
    }
  }
}